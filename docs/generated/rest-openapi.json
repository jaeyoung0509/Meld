  "components": {
    "schemas": {
      "ApiErrorResponse": {
        "type": "object",
        "required": [
          "code",
          "message"
        ],
        "properties": {
          "code": {
            "type": "string"
          },
          "detail": {
            "type": [
              "array",
              "null"
            ],
            "items": {
              "$ref": "#/components/schemas/ApiValidationIssue"
            }
          },
          "details": {},
          "message": {
            "type": "string"
          }
        }
      },
      "ApiValidationIssue": {
        "type": "object",
        "required": [
          "loc",
          "msg",
          "type"
        ],
        "properties": {
          "loc": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "msg": {
            "type": "string"
          },
          "type": {
            "type": "string"
          }
        }
      },
      "HealthResponse": {
        "type": "object",
        "required": [
          "status"
        ],
        "properties": {
          "status": {
            "type": "string"
          }
        }
      },
      "HelloRestResponse": {
        "type": "object",
        "required": [
          "message"
        ],
        "properties": {
          "message": {
            "type": "string"
          }
        }
      },
      "ProtectedWhoAmIResponse": {
        "type": "object",
        "required": [
          "subject"
        ],
        "properties": {
          "issuer": {
            "type": [
              "string",
              "null"
            ]
          },
          "subject": {
            "type": "string"
          }
        }
      },
      "RootResponse": {
        "type": "object",
        "required": [
          "service_name",
          "environment"
        ],
        "properties": {
          "environment": {
            "type": "string"
          },
          "service_name": {
            "type": "string"
          }
        }
      }
    }
  },
  "tags": [
    {
      "name": "rest",
      "description": "Meld REST endpoints"
    }
  ]
}